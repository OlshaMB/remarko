    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Подключить",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/target/debug/remarko",
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Запустить",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/remarko",
            "args": ["${workspaceFolder}/tests/TEST.md"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }

    ]
}